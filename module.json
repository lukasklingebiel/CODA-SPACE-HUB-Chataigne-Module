{
  "name":"SPACE HUB Control",
  "type":"OSC",
  "path":"Immersive solution",
  
  "version":"1.0.0",
  "description":"CODA Audio SPACE HUB Control",
  "url":"https://github.com/tommag/Sample-Chataigne-module",
  "downloadURL":"https://github.com/tommag/Sample-Chataigne-module/archive/master.zip",

  "hasInput":true,
  "hasOutput":true, 

  "hideDefaultCommands":false,
  
  "defaults":
  {	
    "autoAdd":false,
    "oscInput":
    {
      "localPort":9001
    },
    "OSC Outputs": {
			"OSC Output": {
				"local": true,
				"remoteHost": "192.168.1.1",
				"remotePort": 9301
			}
		}
  },

  "parameters":
  {
  },

  "hideDefaultParameters": [ "autoAdd", "oscInput/localPort"],

  "scripts": 
  [
    "moduleScript.js"
  ],

  "values":
  {
  },

  "commands":
  {
    
    "Previous Snapshot":
    {
      "menu":"",  
      "callback":"previousSnapshot",
      "parameters":
      {
      }
    },
    "Next Snapshot":
    {
      "menu":"",  
      "callback":"nextSnapshot",
      "parameters":
      {
      }
    },
    "Previous Reverb Preset":
    {
      "menu":"",  
      "callback":"previousReverbPreset",
      "parameters":
      {
      }
    },
    "Next Reverb Preset":
    {
      "menu":"",  
      "callback":"nextReverbPreset",
      "parameters":
      {
      }
    },
    "Master Gain":
    {
      "menu":"",  
      "callback":"masterGain",
      "parameters":
      {
        "GaindB":
        {
          "type":"Float",
          "min":-80,
          "max":10,
          "default":0
        }
      }
    },
    "BPM":
    {
      "menu":"",  
      "callback":"bpm",
      "parameters":
      {
        "BPM":
        {
          "type":"Float",
          "min":0,
          "max":300,
          "default":120
        }
      }
    },
    "Restart Orbits":
    {
      "menu":"",  
      "callback":"restartOrbits",
      "parameters":
      {
      }
    }
  }
}
